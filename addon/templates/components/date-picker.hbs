<div class="date-picker-container">
    <button class="btn btn-primary" {{action "toggleCalendar"}}>Generate calendar</button>
    <br><br><br>


    <div id="ember-date-picker" class="date-picker hidden">
        <div class="date-picker__month-container">
            <div class="date-picker__prev" {{action "togglePrev"}}><i class="fa fa-chevron-left"></i></div>
            <div class="date-picker__switch">{{currentMonth}} {{currentYear}}</div>
            <div class="date-picker__next" {{action "toggleNext"}}><i class="fa fa-chevron-right"></i></div>
        </div>
        <div class="date-picker__week-container">
            <div class="date-picker__dow">Su</div>
            <div class="date-picker__dow">Mo</div>
            <div class="date-picker__dow">Tu</div>
            <div class="date-picker__dow">We</div>
            <div class="date-picker__dow">Th</div>
            <div class="date-picker__dow">Fr</div>
            <div class="date-picker__dow">Sa</div>
        </div>
        <div class="date-picker__days-container">
            {{#each dayObjects as |day|}}
                <div class="date-picker__day {{if day.oldDay 'date-picker__old'}} {{if day.newDay 'date-picker__new'}} {{if day.today 'date-picker__today'}}"
                    {{action "pickDate" day}}>{{day.monthDay}}</div>
            {{/each}}
        </div>
    </div>



